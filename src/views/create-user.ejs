<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create user</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="container mt-4">
      <form
        action="/create-user"
        method="post"
        class="d-flex flex-column gap-3"
      >
        <div class="row">
          <div class="form-group col-6">
            <label for="inputEmail4">Email</label>
            <input
              type="email"
              class="form-control"
              id="inputEmail4"
              name="email"
              placeholder="Email"
            />
          </div>
          <div class="form-group col-6">
            <label for="inputPassword4">Password</label>
            <input
              type="password"
              class="form-control"
              id="inputPassword4"
              name="password"
              placeholder="Password"
            />
          </div>
        </div>

        <div class="row">
          <div class="form-group col-6">
            <label for="inputFirstName4">First name</label>
            <input
              class="form-control"
              id="inputFirstName4"
              name="firstName"
              placeholder="First name"
            />
          </div>
          <div class="form-group col-6">
            <label for="inputLastName4">Last name</label>
            <input
              class="form-control"
              id="inputLastName4"
              name="lastName"
              placeholder="Last name"
            />
          </div>
        </div>

        <div class="row">
          <div class="form-group col-6">
            <label for="inputGender4">Gender</label>
            <select id="inputGender4" class="form-control" name="gender">
              <option value="MALE">Male</option>
              <option value="FEMALE">Female</option>
              <option value="OTHER">Other</option>
            </select>
          </div>
          <div class="form-group col-6">
            <label for="inputPhoneNumber4">Phone number</label>
            <input
              class="form-control"
              id="inputPhoneNumber4"
              name="phoneNumber"
              placeholder="Phone number"
            />
          </div>
        </div>

        <div class="form-group">
          <label for="inputAddress4">Address</label>
          <input
            class="form-control"
            id="inputAddress4"
            name="address"
            placeholder="Address"
          />
        </div>

        <div class="row">
          <div class="form-group col-6">
            <label for="inputPosition4">Position</label>
            <select id="inputPosition4" class="form-control" name="position">
              <option selected value="NONE">None</option>
              <option value="MASTER">Master</option>
              <option value="DOCTOR">Doctor</option>
              <option value="ASSOCIATE_PROFESSOR">Associate professor</option>
              <option value="PROFESSOR">Professor</option>
            </select>
          </div>
          <div class="form-group col-6">
            <label for="inputRole4">Role</label>
            <select id="inputRole4" class="form-control" name="role">
              <option selected value="ADMIN">Admin</option>
              <option value="DOCTOR">Doctor</option>
              <option value="PATIENT">Patient</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck" />
            <label class="form-check-label" for="gridCheck">
              Check me out
            </label>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Sign in</button>
      </form>
    </div>
  </body>
</html>
