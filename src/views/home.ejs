<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="container">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">Phone</th>
            <th scope="col">Role ID</th>
            <th scope="col">Position ID</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% listUsers.forEach(function(user, index){ %>
          <tr class="">
            <th scope="row"><%= index+1 %></th>
            <td scope="row"><%= user.id %></td>
            <td scope="row"><%= user.firstName %></td>
            <td scope="row"><%= user.lastName %></td>
            <td scope="row"><%= user.email %></td>
            <td scope="row"><%= user.address %></td>
            <td scope="row"><%= user.phoneNumber %></td>
            <td scope="row"><%= user.roleId %></td>
            <td scope="row"><%= user.positionId %></td>
            <td scope="row">
              <a href="/edit-user/<%= user.id %>" type="button">Edit</a>
              <a href="/delete-user/<%= user.id %>" type="button">Delete</a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
